<div class="ui two column middle aligned grid basic segment">
	<div class="column">
		<div id="login-form" class="ui small form segment">
			<div class="field">
				<label>Email</label>
				<div class="ui left labeled icon input">
					<input type="text" id="login-email" placeholder="Email">
					<i class="user icon"></i>
				</div>
			</div>
			<div class="field">
				<label>Password</label>
				<div class="ui left labeled icon input">
					<input type="password" id="login-password" placeholder="Password">
					<i class="lock icon"></i>
				</div>
			</div>
			<div class="ui error message">
				<div class="header">There were issues with your login</div>
			</div>
			<div id="login-submit" class="ui blue submit button">Login</div>
		</div>
	</div>
	<div class="ui vertical divider">Or</div>
	<div class="center aligned column">
		<div id="signup-begin" class="huge green ui labeled icon button">
			<i class="icon add user"></i>
			Sign Up
		</div>
